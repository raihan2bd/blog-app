<section>
    <%= render "shared/user_card", user: @user %>
    <h2 class="user_title">List of Posts for User #<%= @user.name%></h2>
    <% if @posts.empty? %>
        <p>No post found</p>
    <% end %>
    <% @posts.each do |post| %>
        <%= render "shared/post_card", post: post %>
        <%= render "shared/comment_box", comments: post.recent_comments %>
    <% end %>

    <button class="btn-pagination" type="button">Pagination</button>

</section>